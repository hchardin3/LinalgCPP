{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build whole project",
            "command": "/usr/lib/ccache/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Matrices/matrix.cpp",
                "${workspaceFolder}/Matrices/matrix2.cpp",
                "${workspaceFolder}/Matrices/matrix3.cpp",
                "${workspaceFolder}/Vectors/vector.cpp",
                "${workspaceFolder}/Vectors/vector2.cpp",
                "${workspaceFolder}/Vectors/vector3.cpp",
                "${workspaceFolder}/Testing/test_linalg.cpp",
                "${workspaceFolder}/Utils/range.cpp",
                "-I${workspaceFolder}/Matrices",
                "-I${workspaceFolder}/Vectors",
                "-I${workspaceFolder}/Utils",
                "-o",
                "${workspaceFolder}/build/output_program"  // Adjust the output path/name as needed
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build the entire project."
        }
    ],
    "version": "2.0.0"
}
